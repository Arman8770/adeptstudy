<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/graduation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/graduation"
                android:textAlignment="center"
                android:fontFamily="@font/andika"
                android:textSize="20dp"
                android:textStyle="bold"
                android:clickable="true"
                android:drawableTop="@drawable/adeptstudy"/>


            <ImageView
                android:id="@+id/imageline1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/linestraigt"
                android:background="@color/green_light"/>

            <TextView
                android:id="@+id/postGraduation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Graduation"
                android:textAlignment="center"
                android:fontFamily="@font/andika"
                android:textSize="20dp"
                android:clickable="true"
                android:textStyle="bold"
                android:drawableTop="@drawable/adeptstudy"/>

            <ImageView
                android:id="@+id/imageline2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/linestraigt"
                android:background="@color/green_light"/>

            <TextView
                android:id="@+id/doctorate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctorate"
                android:fontFamily="@font/andika"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:clickable="true"
                android:drawableTop="@drawable/adeptstudy"/>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>